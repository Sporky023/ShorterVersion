.stackleft
  %ul
    %li
      = link_to "Add a Document", new_document_path
    %li
      = link_to "Browse Documents", documents_path
    %li
      = link_to_function 'help?', "$('.help').toggle()"
.logo.stackleft
  %h1
    ShorterVersion.com
  %h2
    documents summarized by the people, for the people
#share.stackleft
  - if user_signed_in?
    %ul
      %li
        logged in as
        = current_user.nickname
      %li
        = link_to "log out", destroy_user_session_path
  - else
    %ul
      %li
        = link_to "sign up", new_user_registration_path
      %li
        = link_to "log in", new_user_session_path
  

.clear