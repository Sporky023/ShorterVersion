.summary.module
  .header
    .stackleft
      = link_to 'summary', summary_path(summary)
      written
      = summary.created_at.to_s(:short)
      %span.character_count
        = summary.body.size.to_s
        characters
    .stackleft
      coverage:
      = summary.type_of_subset.to_s+'.'
      - if summary.type_of_subset == "specific pages"
        = summary.page_begin
        to
        = summary.page_end
        = link_to "vote up", summary_summary_votes_path(summary, {:summary_vote => {:score => 1, :summary_id => summary.id}}), :method => :post
        = summary.up_votes
        = link_to "vote down", summary_summary_votes_path(summary, {:summary_vote => {:score => -1, :summary_id => summary.id}}), :method => :post, :class => "red1"
        = summary.down_votes
      .stackleft
        - if defined?(sharable) and sharable
          = facebook_share_button
    .clear
  .body
    = summary.body
  .tools
        
  .clear
    
    